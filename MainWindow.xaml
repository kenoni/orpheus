<Window xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=MultiSelectTreeView" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:converters="clr-namespace:Orpheus.Converters"
        xmlns:models="clr-namespace:Orpheus.Models"
        x:Class="Orpheus.MainWindow"
        mc:Ignorable="d"
        Closing="OnClose"
        Title="Orpheus" Width="800" MinHeight="450" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Icon="Icons/Orpheus32x32.png">
    <Window.Resources>
        <converters:SecondsToTimeConverter x:Key="TimeConverter" />
    </Window.Resources>
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="45" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="2" DockPanel.Dock="Top" Click="FileSystemBtn_OnClick" VerticalAlignment="Top"  Width="32" Height="20" VerticalContentAlignment="Top" Background="Transparent" Margin="0,5,7,0" HorizontalContentAlignment="Center" HorizontalAlignment="Right" >
            <Image Source="Icons/folder.png" />
        </Button>

        <Button Grid.Column="1" Grid.Row="2" DockPanel.Dock="Bottom"  Click="RescanFileSystem_Click" Width="32" Height="20" VerticalContentAlignment="Top" Background="Transparent" VerticalAlignment="Bottom" Margin="0,0,7,7" HorizontalContentAlignment="Center" HorizontalAlignment="Right" >
            <Image Source="Icons/reload.png" />
        </Button>

        <GridSplitter Name="GridSplitter1" Visibility="Hidden" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="2" VerticalAlignment="Stretch"  ResizeBehavior="PreviousAndNext" Height="Auto" Background="CornflowerBlue" Margin="0,0,0,5" IsEnabled="True" ResizeDirection="Columns" Cursor="SizeWE"/>

        <DockPanel Grid.Column="2" Grid.Row="2" Width="Auto"  Name="FileSystemDockPanel"  Visibility="Hidden" >

            <Controls:MultiSelectTreeView  PreviewMouseDown="FileTreeview_PreviewMouseDown"  HorizontalContentAlignment="Stretch" ItemsSource="{Binding Path=MpdFileSystem}"  VerticalContentAlignment="Stretch" Name="FileTreeview" Margin="5" >
                <Controls:MultiSelectTreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type models:MpdFile}" ItemsSource="{Binding Path=Children}">
                        <TextBlock Text="{Binding Path=Name}"></TextBlock>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown" PreviewMouseMove="TextBlock_PreviewMouseMove"/>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </Controls:MultiSelectTreeView.Resources>
            </Controls:MultiSelectTreeView>
        </DockPanel>
        <Menu DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <MenuItem Header="_File">
                <MenuItem Header="Settings" Click="OnSettingsClicked"/>
                <MenuItem Header="Exit" Click="OnExitClicked"/>
            </MenuItem>
        </Menu>
        <Border  Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="Black"   BorderThickness="0 0 0 .4">
            <DockPanel Height="34" LastChildFill="False" Margin="5,0" VerticalAlignment="Top" >

                <Slider x:Name="VolumeSlider" IsMoveToPointEnabled="True"  Height="20" Maximum="100"   TickFrequency="15" VerticalAlignment="Center" Width="100" Margin="5,0" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="2.919,0.567" DockPanel.Dock="Right" ValueChanged="OnSliderValueChanged"/>
                <ToggleButton   HorizontalAlignment="Left" Margin="1,0,0,0" VerticalAlignment="Center" Width="24" DockPanel.Dock="Right" Click="OnPlayClicked">
                    <Image Height="18" Width="16">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Style.Triggers>
                                    <DataTrigger  Binding="{Binding IsPlayerPlaying}" Value="False">
                                        <Setter Property="Source" Value="Icons/play-button.png"/>
                                    </DataTrigger>
                                    <DataTrigger  Binding="{Binding IsPlayerPlaying}" Value="True">
                                        <Setter Property="Source" Value="Icons/stop.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </ToggleButton>

            </DockPanel>
        </Border>


        <ListView AllowDrop="True" Grid.Row="2" Grid.Column="0" PreviewDrop="PlayListView_PreviewDrop" VerticalAlignment="Stretch" PreviewKeyDown="PlayListView_PreviewKeyDown"  Name="PlayListView" ItemsSource="{Binding Path=CurrentPlaylist}"  MouseDoubleClick="OnPlaylistViewDoubleClicked"  Margin="5,5,0,5" VerticalContentAlignment="Stretch" >
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView >
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DataTemplate.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsCurrentlyPlaying}" Value="true" >
                                                <Setter Property="Foreground" Value="Blue"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataTemplate.Resources>
                                <TextBlock Text="{Binding Name}" Name="PlaylistEntryName"  TextAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="0 .4 0 0">
            <DockPanel  VerticalAlignment="Stretch" Height="30" >
                <Label DockPanel.Dock="Left"  Content="{Binding Path=ElapsedTime, Converter={StaticResource TimeConverter}}"  />
                <Label DockPanel.Dock="Left"  Content="/"  />
                <Label  DockPanel.Dock="Left" Content="{Binding Path=Duration, Converter={StaticResource TimeConverter}}"  />
                <Label  Content="{Binding Path=PlayingSong}"  />
            </DockPanel>
        </Border>

        <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Stretch" Height="30" Dock="Bottom" Name="PlaylisItemSliderPanel" Margin="10,0,10,10">
            <Slider  Width="{Binding Path=ActualWidth, ElementName=PlaylisItemSliderPanel}" IsMoveToPointEnabled="True" Margin="0,10,0,0" Maximum="{Binding Path=Duration}" Value="{Binding Path=ElapsedTime}" Name="PlaylisItemSlider" VerticalContentAlignment="Bottom" PreviewMouseUp="PlaylisItemSlider_OnValueChanged" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="20"  />
        </DockPanel>

        <StatusBar Grid.Row="5" Grid.ColumnSpan="3" Grid.Column="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" >
            <StatusBarItem>
                <TextBlock  Name="StatusBarLabel" Text="{Binding Path=State}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock  Name="MpdCommandsStatusLabel" Text="{Binding Path=CommandsStatus}" />
            </StatusBarItem>
        </StatusBar>

    </Grid>


</Window>
