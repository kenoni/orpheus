<Window xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=MultiSelectTreeView" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:converters="clr-namespace:Orpheus.Converters"
        xmlns:models="clr-namespace:Orpheus.Models"
        x:Class="Orpheus.MainWindow"
        mc:Ignorable="d"
        Closing="OnClose"
        Title="Orpheus" Width="800" MinHeight="450" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Icon="Icons/Orpheus32x32.png">
    <Window.Resources>
        <converters:SecondsToTimeConverter x:Key="TimeConverter" />
        <converters:UnixTimeToDateTimeConverter x:Key="UnixTimeConverter" />
    </Window.Resources>
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GridSplitter Name="GridSplitter1" Visibility="Visible" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="2" VerticalAlignment="Stretch"  ResizeBehavior="PreviousAndNext" Height="Auto" Background="CornflowerBlue" Margin="0,0,0,5" IsEnabled="True" ResizeDirection="Columns" Cursor="SizeWE"/>

        <Popup x:Name="AddStreamPopup"  AllowsTransparency="True" IsOpen="False" Width="290"  PlacementTarget="{Binding ElementName=PlayerStreamsListView}" Placement="Top" Margin="0">
            <Grid Background="AliceBlue" Width="290">
                <Grid.Resources >
                    <Style TargetType="Border" >
                        <Setter Property="Padding" Value="5,0,5,1" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="45" />
                    <ColumnDefinition Width="210" />
                    <ColumnDefinition Width="35" />
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0">
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Name"></TextBlock>
                </Border>
                <Border Grid.Row="0" Grid.Column="1">
                    <TextBox Name="AddStreamName" Width="199" Grid.Column="1" Grid.Row="0"></TextBox>
                </Border>
                <Border Grid.Row="1" Grid.Column="0">
                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Url"></TextBlock>
                </Border>
                <Border Grid.Row="1" Grid.Column="1">
                    <TextBox Name="AddStreamUrl" Width="199" Grid.Column="1" Grid.Row="1"></TextBox>
                </Border>
                <Border Grid.Row="1" Grid.Column="2">
                    <Button  x:Name="AddStreamBtn" Content="Add" 
                            Grid.Column="2" Grid.Row="1" Click="AddStreamBtn_Click" />
                </Border>
                
            </Grid>
        </Popup>
       
        <Menu DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <MenuItem Header="_File">
                <MenuItem Header="Settings" Click="OnSettingsClicked"/>
                <MenuItem Header="Exit" Click="OnExitClicked"/>
            </MenuItem>
        </Menu>
        <Border  Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="Black"   BorderThickness="0 0 0 .4">
            
        </Border>


        <ListView AllowDrop="True" Grid.Row="2" Grid.Column="0" PreviewDrop="PlayListView_PreviewDrop" VerticalAlignment="Stretch" PreviewKeyDown="PlayListView_PreviewKeyDown"  Name="PlayListView" ItemsSource="{Binding Path=CurrentPlaylist}"  MouseDoubleClick="OnPlaylistViewDoubleClicked"  Margin="5,5,0,5" VerticalContentAlignment="Stretch" >
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView >
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DataTemplate.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsCurrentlyPlaying}" Value="true" >
                                                <Setter Property="Foreground" Value="Blue"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataTemplate.Resources>
                                <TextBlock Text="{Binding Name}" Name="PlaylistEntryName"  TextAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="0 .4 0 0">
            <DockPanel  VerticalAlignment="Stretch" Height="30" >
                <Label DockPanel.Dock="Left"  Content="{Binding Path=ElapsedTime, Converter={StaticResource TimeConverter}}"  />
                <Label DockPanel.Dock="Left"  Content="/"  />
                <Label  DockPanel.Dock="Left" Content="{Binding Path=Duration, Converter={StaticResource TimeConverter}}"  />
                <Label  Content="{Binding Path=PlayingSong}"  />
            </DockPanel>
        </Border>

        <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Stretch" Height="30" Dock="Bottom" Name="PlaylisItemSliderPanel" Margin="10,0,10,10">
            <Slider  Width="{Binding Path=ActualWidth, ElementName=PlaylisItemSliderPanel}" IsMoveToPointEnabled="True" Margin="0,0,0,0" Maximum="{Binding Path=Duration}" Value="{Binding Path=ElapsedTime}" Name="PlaylisItemSlider" VerticalContentAlignment="Bottom" PreviewMouseUp="PlaylisItemSlider_OnValueChanged" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="20"  />
        </DockPanel>

        <StatusBar Grid.Row="5" Grid.ColumnSpan="3" Grid.Column="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" >
            <StatusBarItem>
                <TextBlock  Name="StatusBarLabel" Text="{Binding Path=State}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock  Text="Last db update:" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock  Name="MpdCommandsStatsLabel" Text="{Binding Path=UpdateDbTime , Converter={StaticResource UnixTimeConverter}}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock  Name="MpdCommandsStatusLabel" Text="{Binding Path=CommandsStatus}" />
            </StatusBarItem>
        </StatusBar>
        <TabControl SelectionChanged="TabControl_SelectionChanged"  Grid.Column="2" Grid.Row="2" TabStripPlacement="Left" >
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <RotateTransform Angle="270"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Border Name="Border" BorderBrush="Gray" BorderThickness="1" CornerRadius="6,6,0,0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center" HorizontalAlignment="Center" 
                                        ContentSource="Header" Margin="12,2,12,2"/>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
            <TabItem Header="Mpd">
                <DockPanel  Name="MpdDockPanel">
                    <DockPanel Height="34" DockPanel.Dock="Top" Name="MpdActionsDockPanel">
                        <Button   Click="RescanFileSystem_Click" Width="32" Height="22" VerticalContentAlignment="Top" Background="Transparent" VerticalAlignment="Bottom" Margin="5,5,5,5" HorizontalContentAlignment="Center" HorizontalAlignment="Left" >
                            <Image Source="Icons/reload.png" />
                        </Button>
                    </DockPanel>
                    <Controls:MultiSelectTreeView  PreviewMouseDown="FileTreeview_PreviewMouseDown"  
                                           HorizontalContentAlignment="Stretch" 
                                           ItemsSource="{Binding Path=MpdFileSystem}"  
                                           VerticalContentAlignment="Stretch" 
                                           Name="FileTreeview" 
                                           Margin="5" >
                        <Controls:MultiSelectTreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type models:MpdFile}" ItemsSource="{Binding Path=Children}">
                                <TextBlock Text="{Binding Name}" PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown" PreviewMouseMove="TextBlock_PreviewMouseMove"></TextBlock>
                            </HierarchicalDataTemplate>
                        </Controls:MultiSelectTreeView.Resources>
                    </Controls:MultiSelectTreeView>
                </DockPanel>
            </TabItem>
            <TabItem Header="Player">
                <DockPanel  Name="PlayerDockPanel">

                    <DockPanel Height="34" HorizontalAlignment="Right" LastChildFill="False" Margin="5,0" DockPanel.Dock="Top" VerticalAlignment="Top" >
                        <ToggleButton HorizontalAlignment="Left" Margin="1,0,0,0" VerticalAlignment="Center" Width="24"  Click="OnPlayClicked">
                            <Image Height="18" Width="16">
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Style.Triggers>
                                            <DataTrigger  Binding="{Binding IsPlayerPlaying}" Value="False">
                                                <Setter Property="Source" Value="Icons/play-button.png"/>
                                            </DataTrigger>
                                            <DataTrigger  Binding="{Binding IsPlayerPlaying}" Value="True">
                                                <Setter Property="Source" Value="Icons/stop.png"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </ToggleButton>
                        <Slider x:Name="VolumeSlider" HorizontalAlignment="Right" IsMoveToPointEnabled="True"  Height="20" Maximum="100"   TickFrequency="15" VerticalAlignment="Center" Margin="5,0" Width="120"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="2.919,0.567"  ValueChanged="OnSliderValueChanged"/>
                    </DockPanel>

                    <ListView PreviewKeyDown="PlayerStreamsListView_PreviewKeyDown" AllowDrop="True" VerticalAlignment="Stretch"   Name="PlayerStreamsListView" ItemsSource="{Binding Path=PlayerStreams}"  MouseDoubleClick="PlayerStreamsListView_MouseDoubleClick"  Margin="5,5,0,5" VerticalContentAlignment="Stretch" >
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add" Name="AddStreamMenuItem" Click="MenuItem_Click" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView >
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <DataTemplate.Resources>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=IsPlaying}" Value="true" >
                                                            <Setter Property="Foreground" Value="Blue"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataTemplate.Resources>
                                            <TextBlock Text="{Binding Name}" Name="PlayerStreamsEntryName"  TextAlignment="Right" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>


</Window>
